@{
    ViewData["Title"] = "ListaVerbali";
}
<div class="container text-center">
    <div class="row">
        <div>
            <h2 class="text-center">Lista Verbali</h2>
        </div>
        <div class="text-right mt-3 mb-3">
            <a href="@Url.Action("AggiungiVerbale", "Verbale")" class="btn btn-primary">Aggiungi Verbale</a>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>IdVerbale</th>
                <th>DataViolazione</th>
                <th>IndirizzoViolazione</th>
                <th>NominativoAgente</th>
                <th>DataTrascrizioneVerbale</th>
                <th>Importo</th>
                <th>DecurtamentoPunti</th>
                <th>IdAnagrafica</th>
                <th>IdViolazione</th>
                <th>Opzioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var verbale in Model)
            {
                <tr>
                    <td>@verbale.IdVerbale</td>
                    <td>@verbale.DataViolazione</td>
                    <td>@verbale.IndirizzoViolazione</td>
                    <td>@verbale.Nominativo_Agente</td>
                    <td>@verbale.DataTrascrizioneVerbale</td>
                    <td>@verbale.Importo</td>
                    <td>@verbale.DecurtamentoPunti</td>
                    <td>@verbale.IdViolazione</td>
                    <td class="d-flex justify-content-evenly">
                        <a href="@Url.Action("ModificaVerbale", "Verbale", new { IdVerbale = verbale.IdVerbale })" class="btn btn-warning btn-sm">Modifica</a>
                        <form action="@Url.Action("EliminaVerbale", "Verbale")" method="post" class="mx-1">
                            <input type="hidden" name="IdVerbale" value="@verbale.IdVerbale" />
                            <button type="submit" class="btn btn-danger btn-sm">Elimina</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
