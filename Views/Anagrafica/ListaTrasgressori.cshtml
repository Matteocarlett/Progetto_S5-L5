@{
    ViewData["Title"] = "ListaTrasgressori";
}

<div class="container text-center">
    <div class="row">
        <div>
            <h2 class="text-center">Lista dei trasgressori</h2>
        </div>
        <div class="text-right mt-3 mb-3">
            <a href="@Url.Action("AggiungiTrasgressore", "Anagrafica")" class="btn btn-primary">Aggiungi trasgressore</a>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>IdAnagrafica</th>
                <th>Cognome</th>
                <th>Nome</th>
                <th>Indirizzo</th>
                <th>Città</th>
                <th>CAP</th>
                <th>Codice Fiscale</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trasgressore in Model)
            {
                <tr>
                    <td>@trasgressore.IdAnagrafica</td>
                    <td>@trasgressore.Cognome</td>
                    <td>@trasgressore.Nome</td>
                    <td>@trasgressore.Indirizzo</td>
                    <td>@trasgressore.Città</td>
                    <td>@trasgressore.CAP</td>
                    <td>@trasgressore.Cod_Fisc</td>
                    <td>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
