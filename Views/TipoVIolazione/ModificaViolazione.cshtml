@{
    ViewBag.Title = "ModificaViolazione";
}

<div class="container">
    <h2 class="text-center">Modifica Violazione</h2>

    <form action="@Url.Action("SalvaModifiche", "TipoVIolazione")" method="post">
        <input type="hidden" name="IdViolazione" value="@Model.IdViolazione" />

        <div class="form-group row">
            <label for="Descrizione" class="col-md-2 col-form-label">Descrizione</label>
            <div class="col-md-10">
                <input type="text" id="Descrizione" name="Descrizione" value="@Model.Descrizione" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-warning mt-3">Salva</button>
            </div>
        </div>
    </form>
</div>
