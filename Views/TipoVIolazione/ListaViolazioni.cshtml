@{
    ViewData["Title"] = "ListaViolazioni";
}

<div class="container text-center">
    <div class="row">
        <div>
            <h2 class="text-center">Lista delle violazioni</h2>
        </div>
        <div class="text-right mt-3 mb-3">
            <a href="@Url.Action("AggiungiViolazione", "Violazione")" class="btn btn-primary">Aggiungi violazione</a>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>IdViolazione</th>
                <th>Descrizione</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var violazione in Model)
            {
                <tr>
                    <td>@violazione.IdViolazione</td>
                    <td>@violazione.Descrizione</td>
                    <td class="d-flex justify-content-evenly">
                        <a href="@Url.Action("ModificaViolazione", "Violazione", new { IdViolazione = violazione.IdViolazione })" class="btn btn-warning btn-sm">Modifica</a>
                        <form action="@Url.Action("EliminaViolazione", "Violazione")" method="post">
                            <input type="hidden" name="IdViolazione" value="@violazione.IdViolazione" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Sei sicuro di voler eliminare questa violazione?')">Elimina</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
